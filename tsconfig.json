{
  "compilerOptions": {
    "allowJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "target": "es5",
    "declaration": true,
    "lib": [
      "es6",
      "es2015",
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "magento-client": ["./dist"]
    },
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": false,
    "sourceMap": true
  },
  "include": [
    "src/index.ts"
  ]
}
